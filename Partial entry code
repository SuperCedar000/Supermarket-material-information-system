import tkinter as tk
from tkinter import messagebox

# 创建主窗口
window = tk.Tk()
window.title("超市物资信息管理系统 - 登录")
window.geometry("300x200")

# 账号和密码的正确值
correct_username = "SLiii00000999"
correct_password = "123123"

# 定义登录函数
def login():
    username = entry_username.get()
    password = entry_password.get()
    
    if username == correct_username and password == correct_password:
        messagebox.showinfo("登录已成功", "欢迎进入超市物资信息管理系统！")
        # 在这里添加登录成功后跳转到主界面的代码
    else:
        messagebox.showerror("登录失败", "账号或密码错误，请重试！")

# 创建标签和输入框
label_username = tk.Label(window, text="账号:")
label_username.pack(pady=10)

entry_username = tk.Entry(window)
entry_username.pack()

label_password = tk.Label(window, text="密码:")
label_password.pack(pady=10)

entry_password = tk.Entry(window, show="*")  # 密码输入框使用星号隐藏
entry_password.pack()

# 创建登录按钮
btn_login = tk.Button(window, text="登录", command=login)
btn_login.pack(pady=20)

# 启动主循环
window.mainloop()
