import tkinter as tk
from tkinter import messagebox
from datetime import datetime

# Simulated inventory and incoming stock records
inventory = {
    "Apples": 50,
    "Bananas": 75,
    "Oranges": 100,
    "Milk": 30,
    "Eggs": 200,
}

incoming_stock = []  # List to store incoming stock records

# Create the main window
window = tk.Tk()
window.title("Supermarket Inventory Management System")
window.geometry("400x300")

# Function to register incoming goods and record the transaction
def register_incoming():
    item = entry_item.get()
    quantity = entry_quantity.get()
    
    if item and quantity.isdigit():
        quantity = int(quantity)
        if item in inventory:
            inventory[item] += quantity
        else:
            inventory[item] = quantity
        
        # Record the incoming goods with the current timestamp
        incoming_stock.append({
            "item": item,
            "quantity": quantity,
            "timestamp": datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        })
        
        messagebox.showinfo("Success", f"{quantity} units of {item} have been added to the inventory.")
        entry_item.delete(0, tk.END)
        entry_quantity.delete(0, tk.END)
    else:
        messagebox.showerror("Error", "Please enter a valid item name and quantity.")

# Function to display all incoming stock records
def show_incoming_records():
    records_window = tk.Toplevel(window)
    records_window.title("Incoming Stock Records")
    records_window.geometry("400x400")
    
    label_title = tk.Label(records_window, text="Incoming Stock Records", font=("Arial", 14))
    label_title.pack(pady=10)
    
    records_list = tk.Text(records_window, height=15, width=50)
    records_list.pack(pady=10)
    
    if incoming_stock:
        for record in incoming_stock:
            records_list.insert(tk.END, f"Item: {record['item']}, Quantity: {record['quantity']}, Date: {record['timestamp']}\n")
    else:
        records_list.insert(tk.END, "No incoming stock records available.")
    
    records_list.config(state=tk.DISABLED)

# Labels and entry fields for item and quantity
label_item = tk.Label(window, text="Item Name:")
label_item.pack(pady=5)

entry_item = tk.Entry(window)
entry_item.pack(pady=5)

label_quantity = tk.Label(window, text="Quantity:")
label_quantity.pack(pady=5)

entry_quantity = tk.Entry(window)
entry_quantity.pack(pady=5)

# Button for registering incoming goods
btn_incoming = tk.Button(window, text="Register Incoming Goods", command=register_incoming)
btn_incoming.pack(pady=10)

# Button to view incoming stock records
btn_view_records = tk.Button(window, text="View Incoming Stock Records", command=show_incoming_records)
btn_view_records.pack(pady=10)

# Start the main loop
window.mainloop()
