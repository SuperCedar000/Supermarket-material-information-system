import tkinter as tk
from tkinter import messagebox

# Create the main window
window = tk.Tk()
window.title("Supermarket Inventory Management System - Login")
window.geometry("300x200")

# Correct username and password
correct_username = "SLi000999"
correct_password = "123123"

# Define a function to open the admin panel after successful login
def open_admin_panel():
    admin_window = tk.Toplevel(window)  # Create a new window
    admin_window.title("Admin Panel")
    admin_window.geometry("300x200")
    label_admin = tk.Label(admin_window, text="Successfully entered the Admin Panel!", font=("Arial", 14))
    label_admin.pack(pady=50)

# Define the login function
def login():
    username = entry_username.get()
    password = entry_password.get()
    
    if username == correct_username and password == correct_password:
        messagebox.showinfo("Login Successful", "Welcome to the Supermarket Inventory Management System!")
        open_admin_panel()  # Open the admin panel after successful login
    else:
        messagebox.showerror("Login Failed", "Incorrect username or password. Please try again!")

# Create labels and entry fields
label_username = tk.Label(window, text="Username:")
label_username.pack(pady=10)

entry_username = tk.Entry(window)
entry_username.pack()

label_password = tk.Label(window, text="Password:")
label_password.pack(pady=10)

entry_password = tk.Entry(window, show="*")  # Password field with hidden characters
entry_password.pack()

# Create the login button
btn_login = tk.Button(window, text="Login", command=login)
btn_login.pack(pady=20)

# Start the main loop
window.mainloop()

